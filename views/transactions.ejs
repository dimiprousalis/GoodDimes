
<%- include('partials/header') -%>

  
  <nav class="navbar navbar-expand-lg navbar-light bg-light flex-column">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">Transactions</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="nav flex-column">
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">Enter Transaction</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">View Transaction</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container tranBox">
    <form class="formBox" action="/transactions/createTransaction" method='POST'>
      <div class="form-group">
        <label for="transactionItem">Transaction Item</label>
        <input type="text" placeholder="Enter Description" name='transactionItem'>
      </div>
      <div class="form-group">
        <label for="amountItem">Amount</label>
        <input type="number" step="any" placeholder="Enter Amount" name='amountItem'>
      </div>
      <label>Split Transaction:</label>
      <input type="radio" name="splitItem" value="equally" id="equallyItem">
      <label for="equallyItem">Equally</label>
      <div class="form-group">
        <label for="payerItem">Who Paid?</label>
        <select name='payerItem'>
          <option value="user">Me</option>
          <option value="friend">My Friend</option>
        </select>
      </div>

      <input type="submit">
    </form>
    


    <table class="table table-striped tableBox">
      <thead>
        <tr>
          <th>Description</th>
          <th>Amount</th>
          <th>Your Portion</th>
          <th>Your Friend's Portion</th>
          <th>Who Paid?</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach(function(el) { %>
          <tr class='transactionItem' data-id='<%=el._id%>'>
            <td>
              <%= el.transaction %>
            </td>
            <td>
              <%= el.amount %>
            </td>
            <td>
              <%= el.userPortion %>
            </td>
            <td>
              <%= el.friendPortion %>
            </td>
            <td>
              <%= el.payer==="user" ? "You" : "Your Friend" %>
            </td>
            <td class='del'> Delete </td>

          </tr>
          <% }) %>
      </tbody>
    </table>
  </div>

  <%- include('partials/footer') -%>
  









