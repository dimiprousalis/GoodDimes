<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <title>Transactions</title>
</head>

<body>
  <h1>Transactions</h1>

  <div class="container">
    <form action="/transactions/createTransaction" method='POST'>
      <input type="text" placeholder="Enter Transaction Item" name='transactionItem'>
      <input type="number" step="any" placeholder="Enter Amount" name='amountItem'>
      <label for="payerItem">Who Paid?</label>
      <select name='payerItem'>
        <option value="user">Me</option>
        <option value="friend">My Friend</option>
      </select>
      <input type="submit">
    </form>



    <table class="table table-hover table-dark">
      <thead>
        <tr>
          <th>Description</th> 
          <th>Amount</th>
          <th>Your Portion</th>
          <th>Your Friend's Portion</th>
          <th>Who Paid?</th>
          <th>Delete</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach(function(el) { %>
          <tr class='transactionItem' data-id='<%=el._id%>'>
            <td>
              <%= el.transaction %>
            </td>
            <td>
              <%= el.amount %>
            </td>
            <td>
              <%= el.amount/2 %>
            </td>
            <td>
              <%= el.amount/2 %>
            </td>
            <td>
              <%= el.payer === "user" ? "You" : "Your Friend" %>
            </td>
            <td class='del'> Delete </td>

          </tr>
          <% }) %>
      </tbody>
    </table>

  </div>


  <a href="/logout">Logout</a>

  <script src="js/main.js"></script>
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>